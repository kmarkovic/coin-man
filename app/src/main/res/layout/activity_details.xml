<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hr.kmarkovic.coinman.DetailsActivity">

    <TextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/currency_text"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_below="@+id/date_text"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/details_currency"/>

    <TextView
        android:id="@+id/currency_value_text"
        android:layout_below="@+id/date_text"
        android:layout_toRightOf="@+id/currency_text"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/buy_text"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_below="@+id/currency_text"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/details_buy"/>

    <TextView
        android:id="@+id/buy_value_text"
        android:layout_below="@+id/currency_text"
        android:layout_toRightOf="@+id/buy_text"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/median_text"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_below="@+id/buy_text"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/details_median"/>

    <TextView
        android:id="@+id/median_value_text"
        android:layout_below="@+id/buy_value_text"
        android:layout_toRightOf="@+id/median_text"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:gravity="center"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/sell_text"
        android:layout_width="180sp"
        android:layout_height="50sp"
        android:layout_below="@+id/median_text"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/details_sell"/>

    <TextView
        android:id="@+id/sell_value_text"
        android:layout_below="@+id/median_value_text"
        android:layout_toRightOf="@+id/sell_text"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:gravity="center"
        android:textSize="25sp"/>

</RelativeLayout>
